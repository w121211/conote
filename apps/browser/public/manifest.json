{
  "manifest_version": 2,
  "name": "Conote extension",
  "description": "A conote extension (under development)",
  "version": "0.1.0",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png"
    },
    "default_title": "Conote"
    // "default_popup": "popup.html"  // 改用bg來叫，開新視窗
  },
  // "content_scripts": [
  //   {
  //     "matches": ["<all_urls>"],
  //     "js": ["content-script.js"]
  //     // "run_at": "document_end"
  //   }
  // ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
    // "browser_style": true
  },
  // 加入api網址為了CORS @see https://developer.mozilla.org/en-US/docs/Mozilla/Add-ons/WebExtensions/manifest.json/permissions#host_permissions
  "permissions": [
    "menus",
    "storage", 
    "tabs", 
    "http://localhost:3000/*"
  ]  
}
