# ------ Inputs ------

input AuthorInput {
  name: String!
}

input CardInput {
  symbol: String!
  # templateProps: CardTemplatePropsInput
  meta: CardMetaInput
}

input CardMetaInput {
  redirects: [String!]
  duplicates: [String!]
  url: String
  author: String
  date: String
  description: String
  keywords: [String!]
  title: String
}

input CardStateInput {
  cid: String!
  fromDocCid: String # for doc-index tree
  cardInput: CardInput # for creating card or update card-meta
  cardId: String
  prevStateId: String
  changes: JSON!
  value: JSON! # for comparing changes
}

input CommitInput {
  cardStateInputs: [CardStateInput!]!
}

input DiscussInput {
  meta: JSON
  title: String!
  content: String
}

input DiscussPostInput {
  content: String!
}

input LikeInput {
  choice: LikeChoice!
}

input PollInput {
  # cat: PollCat!
  choices: [String!]!
}

input RateInput {
  choice: RateChoice!
  targetId: ID! # target card id
  authorId: ID # create author rate required
  linkId: ID # create author rate required
}

input VoteInput {
  choiceIdx: Int!
}

