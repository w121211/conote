type Card {
  id: ID!
  meta: CardMeta!
  sym: Sym!
  link: Link
  state: CardState # 可能為 null
  updatedAt: DateTime!
}

type CardEmoji {
  id: ID!
  code: EmojiCode!
  count: CardEmojiCount!
}

type CardEmojiCount {
  id: ID!
  nUps: Int!
  nDowns: Int!
}

type CardEmojiLike {
  id: ID!
  cardEmojiId: String!
  choice: LikeChoice!
  updatedAt: DateTime!
}

type CardDigest {
  commitId: String!
  cardId: String!
  cardMeta: CardMeta! # includes title
  fromCardId: String
  sym: Sym!
  subSyms: [Sym!]!
  # title: String!
  picks: [String!]!
  # rates: [String!]!
  updatedAt: DateTime!
}

type CardMeta {
  template: String
  redirects: [String!]
  duplicates: [String!]
  url: String
  author: String
  publishedAt: String
  description: String
  keywords: [String!]
  title: String
}

type CardState {
  id: ID!
  cardId: String!
  userId: String!
  commitId: String!
  prevId: String
  body: CardStateBody!
  updatedAt: DateTime!
}

type CardStateBody {
  prevStateId: String
  sourceCardId: String
  # changes: [BulletNodeChange!]!
  # value: [BulletTreeNode!]!
  changes: JSON!
  value: JSON!
  # symbolToCardId: JSON!
  # a symbol-cardId map, so later the cahnge of symbol name won't affect
}

type Commit {
  id: String!
  userId: String!
  cardStates: [CardState!]!
  updatedAt: DateTime!
  stateIdToCidDictEntryArray: [DictEntryArray!]! # for client to match committed docs
}

type DictEntryArray {
  k: String!
  v: String!
}

