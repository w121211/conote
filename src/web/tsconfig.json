{
  "references": [{ "path": "../packages/editor" }, { "path": "../packages/fetcher" }],
  "compilerOptions": {
    // copy from nextjs example: https://github.com/vercel/next.js/blob/canary/examples/with-typescript-eslint-jest/tsconfig.json
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "noEmit": true,  // 當用於composite時需改為false
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // Custom settings
    "downlevelIteration": true,
    "composite": true
  },
  "exclude": ["node_modules", ".next", "out", "test"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
  "ts-node": {
    // options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs",
      "allowJs": false
    }
  }
}
