{
  "name": "@conote/backend-nextjs",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "codegen": "graphql-let",
    "dev": "yarn codegen && next dev",
    "build": "yarn codegen && next build",
    "start": "next start",
    "start:okteto": "next start -p 8080",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test:server": "jest -c=jest-server.config.js --watch",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "migrate": "dotenv -e .env.local -- yarn run prisma migrate dev --preview-feature",
    "seed": "dotenv -e .env.local -- ts-node prisma/scripts/from-file.ts ./prisma/seeds",
    "clean:types": "rm -rf dist && rm -rf reports",
    "build:types": "yarn run clean:types && yarn tsc --build --verbose tsconfig.build.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.15",
    "@auth0/nextjs-auth0": "^1.3.1",
    "@prisma/client": "^2.23.0",
    "antd": "^4.15.2",
    "apollo-server-micro": "^2.23.0",
    "cookie": "^0.4.1",
    "fuse.js": "^6.4.6",
    "graphql": "^15.5.0",
    "graphql-scalars": "^1.9.0",
    "jsonwebtoken": "^8.5.1",
    "micro-cors": "^0.1.1",
    "next": "latest",
    "next-react-svg": "^1.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^7.6.2",
    "react-use-measure": "^2.0.4",
    "sass": "^1.32.12"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/plugin-helpers": "^1.18.4",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-operations": "^1.17.15",
    "@graphql-codegen/typescript-react-apollo": "^2.2.3",
    "@testing-library/react": "^11.2.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.4.0",
    "@types/jest": "^26.0.22",
    "@types/micro-cors": "^0.1.1",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-jest": "^26.6.3",
    "dotenv-cli": "^4.0.0",
    "encoding": "^0.1.13",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.19.0",
    "graphql-let": "^0.17.1",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.0.10",
    "pg": "^8.6.0",
    "prettier": "^2.0.2",
    "prisma": "^2.23.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.1.3"
  }
}
