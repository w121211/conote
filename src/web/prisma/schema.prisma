datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  // profile      Profile
  // dailyProfile DailyProfile
  votes        Vote[]
  boards       Board[]
  boardLikes   BoardLike[]
  bulletLikes  BulletLike[]
  polls        Poll[]
  comments     Comment[]
  commentLikes CommentLike[]
  cardBodies   CardBody[]
  Hashtag      Hashtag[]
  HashtagLike  HashtagLike[]
}

// TODO: 非常像symbol，可以合併進symbol？ -> No!poll的情況需要以oauthor為代表
model Author {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  votes     Vote[]
  links     Link[]
  comments  Comment[]
  Hashtag   Hashtag[]
}

model Link {
  id          Int        @id @default(autoincrement())
  url         String     @unique
  domain      String
  sourceType  SourceType
  sourceId    String? // fetcher抓到的source content id
  fetchResult Json? // fetcher抓到的任意資訊

  // source是由這個oauthor建立
  author     Author? @relation(fields: [authorName], references: [name])
  authorName String?

  card Card? // 1-to-1
}

