{
  "extends": "../../../tsconfig.base.json",
  "references": [{ "path": "../../lib/editor" }],
  "compilerOptions": {
    // "target": "es5", // 設為es5時會有error，與gql有關
    "module": "esnext",
    "rootDir": "src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["**/__deprecated__", "**/__tests__", "node_modules"]
  // "exclude": [
  //   "**/__tests__",
  //   "**/__deprecated__",
  //   "out",
  //   "node_modules",
  //   "code-intel-extensions",
  //   "../../node_modules",
  //   "./build/**/*",
  //   "coverage",
  //   "stories",
  //   "src/end-to-end"
  // ]
}
