{
  "manifest_version": 2,
  "name": "Chrome Extension Starter",
  "description": "A Chrome Extension starter kit",
  "version": "0.1.0",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png"
    },
    "default_title": "Hello world?"
    // "default_popup": "popup.html"  // 改用bg來叫，開新視窗
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
    // "browser_style": true
  },
  // 加入api網址 -> 為了CORS
  "permissions": ["storage", "tabs", "http://localhost:3000/"]
}
